<% if user_signed_in? %>
  <%= render 'navegacion/navPrivate' %>
<% else %>
  <%= render 'navegacion/navPublic' %>
<% end %>
<div class="panel">
  <div class="row">
    <div class="col-md-12 ">
      <ol class="breadcrumb">
        <li><%= link_to 'Inicio', root_url %></li>
        <li class="active">Seguros</li>
      </ol>
    </div>
  </div>
  <h1 class="text-center">Seguros</h1>
  <div class="panel-body">
    <div class="row">
      <% @insurances.each do |insurance| %>
        <div class="col-md-4">
          <div class="panel panel-default articulo">
            <div class="panel-heading articulo-titulo">
              <h3 class="panel-title titulo"><%= link_to insurance.nombre, insurance %></h3>
            </div>
            <div class="panel-body">
              <p>
                <%= insurance.resumen %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

