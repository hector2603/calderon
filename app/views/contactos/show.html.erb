<% if user_signed_in? %>
	<%= render 'navegacion/navPrivate' %>
<% else %>
	<%= render 'navegacion/navPublic' %>
<% end %>
<% if notice %>
	<p id="notice" class="alert alert-success"><%= notice %></p>
<%end%>
<div class="panel">
	<div class="row">
		<div class="col-md-12 ">
			<ol class="breadcrumb">
				<li><%= link_to 'Inicio', root_url %></li>
				<li><%= link_to 'Contactos', contactos_path %></li>
				<li class="active"><%= @contacto.asunto %></li>
			</ol>
		</div>
	</div>
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<h1 class="text-center">
			  <%= @contacto.asunto %>
			</h1></br>
			<p>
			  <strong>Nombre: </strong>
			  <%= @contacto.nombre %>
			</p>
			<p>
			  <strong>Número:</strong>
			  <%= @contacto.numero %>
			</p>
			<p class="text-center">
			  <%= @contacto.texto %>
			</p>
			<% if user_signed_in? %>
				<nav>
				  <ul class="pager">
					<%= link_to 'Atras', contactos_path, :class => "btn btn-primary" %>
					<%= link_to 'Eliminar', @contacto, method: :delete, data: { confirm: '¿Está seguro de eliminar el contacto?' }, :class => "btn btn-primary" %>	
				  </ul>
				</nav>
			<% end %>
		</div>
	</div>
</div>
