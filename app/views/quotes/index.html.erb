<% if user_signed_in? %>
  <%= render 'navegacion/navPrivate' %>
<% else %>
  <%= render 'navegacion/navPublic' %>
<% end %>
<div class="panel">
  <div class="row">
    <div class="col-md-12 ">
      <ol class="breadcrumb">
        <li><%= link_to 'Inicio', root_url %></li>
        <li class="active">Cotiza tu Soat</li>
      </ol>
    </div>
  </div>
  <div class="panel-body well">
    <div class="col-md-6 ">
      <div class="row">
        <h3 class="text-center">Cotiza tu</h3>
        <h1 class="text-center">Soat</h1>
        <div class="col-md-offset-3 col-md-6">
          <div class="form-group">
            <label for="">Vehículo</label>
            <select class="form-control" id="vehiculo">
              <option value="seleccione">Seleccione</option>
              <% @soat_privates.each do |c| -%>
                <%= content_tag(:option, c.vehiculo, value: c.vehiculo) %>
              <% end %>
            </select>
          </div>
          <div class="form-group">
            <label for="">Sub tipo Vehículo</label>
            <select class="form-control" id="clase">
              <option value="seleccione">Seleccione</option>
            </select>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <pre id="valor" class="bg-success">El Valor del Soat es:</pre>
        </div>
      </div>
      <div class="row">
        <div class="col-md-offset-2 col-md-8">
          <%= link_to '¿Quieres que te contactemos? Escríbenos', new_contacto_path, :class=> "btn btn-info" %>
        </div>
      </div>
    </div>    
    <div class="col-md-6">
      <div class="thumbnail">
        <%= image_tag "soat.jpg", :alt => "imagenSoat", :title => "ImagenSoat"%>
      </div>
    </div>
  </div>
</div>
