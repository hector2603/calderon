<% if user_signed_in? %>
  <%= render 'navegacion/navPrivate' %>
<% else %>
  <%= render 'navegacion/navPublic' %>
<% end %>
<div class="panel">
  <div class="row">
    <div class="col-md-12 ">
      <ol class="breadcrumb">
        <li><%= link_to 'Inicio', root_url %></li>
        <li ><%= link_to 'Servicios', types_path %></li>
        <li class="active"><%=  @types.nombre %></li>
      </ol>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-2">
        <div class="btn-group-vertical well" role="group" aria-label="...">
          <h3 class="text-center servicio">Servicios</h3>
          <% @tipos_barra.each do |type| %>
            <%= link_to type.nombre, {controller: "services", action: "index", tipo_id: type.id}, :class =>"btn btn-success" %>
          <% end %>
        </div>
      </div>
      <div class="col-md-10">
        <h1 class="text-center">Servicios de <%= @types.nombre%></h1>
        <div class="row">
          <% @services.each do |service| %>
            <div class="col-md-4">
              <div class="panel panel-success sombra articulo">
                <div class="panel-heading articulo-titulo">
                  <h3 class="panel-title"><%= link_to service.nombre, service %></h3>
                </div>
                <div class="panel-body">
                  <p>
                    <%= service.resumen %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="row">
      <% if user_signed_in? %>
        <nav>
          <ul class="pager">
          <%= link_to 'Editar el tipo', edit_type_path(@types), :class => "btn btn-primary"%>
          <%= link_to 'Eliminar el tipo', @types, method: :delete, data: { confirm: '¿Está seguro de borrar?' }, :class => "btn btn-danger" %>  
          </ul>
        </nav>
      <% end %>
    </div>
  </div>
</div>
