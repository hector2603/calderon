<% if user_signed_in? %>
  <%= render 'navegacion/navPrivate' %>
<% else %>
  <%= render 'navegacion/navPublic' %>
<% end %>
<div class="panel">
  <div class="row">
    <div class="col-md-12 ">
      <ol class="breadcrumb">
        <li><%= link_to 'Inicio', root_url %></li>
        <li><%= link_to 'Servicios', services_path %></li>
        <li><%= link_to @service.type.nombre, {controller: "services", action: "index", tipo_id: @service.type.id}%></li>
        <li class="active"><%= @service.nombre %></li>
      </ol>
    </div>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-2">
        <div class="btn-group-vertical well" role="group" aria-label="...">
          <h3 class="text-center">Servicios</h3>
          <% @tipos_barra.each do |type| %>
            <%= link_to type.nombre, {controller: "services", action: "index", tipo_id: type.id}, :class =>"btn btn-success" %>
          <% end %>
        </div>
      </div>
      <div class="col-md-offset-1 col-md-8">
        <h1 class="text-center">
          <%= @service.nombre %>
        </h1></br>
        <p >
          <%= @service.descripcion %>
        </p>
        <% if user_signed_in? %>
          <nav>
            <ul class="pager">
            <%= link_to 'Editar', edit_service_path(@service), :class => "btn btn-primary"%>
            <%= link_to 'Atras', services_path, :class => "btn btn-primary" %>
            <%= link_to 'Eliminar', @service, method: :delete, data: { confirm: '¿Está seguro de borrar?' }, :class => "btn btn-primary" %>  
            </ul>
          </nav>
        <% end %>
      </div>
    </div>
  </div>
</div>
