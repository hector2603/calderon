<% if user_signed_in? %>
  <%= render 'navegacion/navPrivate' %>
<% else %>
  <%= render 'navegacion/navPublic' %>
<% end %>
<div class="panel">
  <div class="row">
    <div class="col-md-12 ">
      <ol class="breadcrumb">
        <li><%= link_to 'Inicio', root_url %></li>
        <li class="active">Artículos</li>
      </ol>
    </div>
  </div>
  <h1 class="text-center">Artículos</h1>
  <div class="panel-body">
    <% @articles.each do |article| %>
      <div class="panel panel-success ">
        <div class="panel-heading">
          <h3 class="panel-title"><%= link_to article.titulo, controller: "articles", action: "show", id: article.id %></h3>
        </div>
        <div class="panel-body">
            <div class="col-md-4">
              <%= link_to(article,:class=>"thumbnail") do %>
                <%= image_tag article.cover.url %>
              <% end %>
            </div>
            <div class="col-md-8">
              <p>
                <%= article.resumen %>
              </p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
