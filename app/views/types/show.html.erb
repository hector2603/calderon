<% if user_signed_in? %>
  <%= render 'navegacion/navPrivate' %>
<% else %>
  <%= render 'navegacion/navPublic' %>
<% end %>
<% if notice %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<%end%>
<div class="panel">
  <div class="row">
    <div class="col-md-12 ">
      <ol class="breadcrumb">
        <li><%= link_to 'Inicio', root_url %></li>
        <li><%= link_to 'Tipos', types_path %></li>
        <li class="active"><%= @type.nombre %></li>
      </ol>
    </div>
  </div>
  <div class="row">
    <div class="col-md-offset-2 col-md-8">
      <h1 class="text-center">
        <%= @type.nombre %>
      </h1></br>
      <% if user_signed_in? %>
        <nav>
          <ul class="pager">
          <%= link_to 'Editar', edit_type_path(@type), :class => "btn btn-primary"%>
          <%= link_to 'Atras', types_path, :class => "btn btn-primary" %>
          <%= link_to 'Eliminar', @type, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %>  
          </ul>
        </nav>
      <% end %>
    </div>
  </div>
</div>

